<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="16dp"
        tools:context=".StartingScreenActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainText"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/headershape"
            android:textAlignment="center"
            android:paddingHorizontal="40dp"
            android:paddingVertical="20dp"
    />



    <Button
            android:id="@+id/button_start_quiz"
            android:text="@string/start_quizButton"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#ff000000"
            android:layout_centerInParent="true"
            android:layout_marginTop="20sp"
            android:paddingHorizontal="30sp"
            android:paddingVertical="10sp"
    />


    <Button
            android:id="@+id/button_start_flashcard"
            android:text="@string/start_flashCard"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#ff000000"
            android:layout_below="@id/button_start_quiz"
            android:layout_centerInParent="true"
            android:layout_marginTop="20sp"
            android:paddingHorizontal="30sp"
            android:paddingVertical="10sp"
            
    />


</RelativeLayout>
